<launch>
  <arg name="device_ip" default="192.168.1.201"/>
  <arg name="pkg" value="velodyne_puck"/>

  <node pkg="nodelet" type="nodelet" name="$(arg pkg)_driver_nodelet" args="load $(arg pkg)/DriverNodelet
    $(arg pkg)_nodelet_manager">
    <param name="device_ip" type="string" value="$(arg device_ip)"/>
    <remap from="~packet" to="packet"/>
  </node>

</launch>
